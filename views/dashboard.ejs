<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        background-color: #2c2c2c;
        color: #f5f5f5;
        font-family: 'Arial', sans-serif;
      }
  
      nav {
        display: flex;
        align-items: center;
        background-color: #ff6347;
        padding: 1em;
        box-sizing: border-box;
        width: 100%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
  
      nav h1 {
        margin: 0;
      }
  
      nav .Hello {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
      }
  
      nav .Hello ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
      }
  
      nav .Hello ul li {
        margin: 0 10px;
        padding: 10px 15px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        border-radius: 5px;
      }
  
      nav .Hello ul li:hover {
        background-color: #fff;
        color: #ff6347;
      }
  
      ul.movies {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
        list-style: none;
        margin: 0;
      }
  
      ul.movies li {
        margin: 10px;
        border: none;
      }
  
      ul.movies li a {
        display: block;
        overflow: hidden;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 2px solid #ff6347;
      }
  
      ul.movies li a:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      }
  
      ul.movies li img {
        width: 200px;
        height: 300px;
        object-fit: cover;
        display: block;
      }.dash{
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .dashboard{
        width: 40%;
        padding: 2.5em;
        display: flex;
        flex-direction: column;
        gap:1.5em;
        justify-content: center;
        align-items: center;

    }
    .search_bar{
        width: 60%;
        display: flex;
        background-color: white;
        padding: 4px 6px;
        font-size: 2em;
        border-radius: 2em;
        border: 1px solid black;
      }
      .search_bar input[type="text"]{
        width: 80%;
        margin-left: 5px;
        padding: 3px;
        font-size: 1em;
        border: transparent;
        /* text-align: center; */
        
      }.search_bar input[type="text"]:focus{
        outline: transparent;
      }
      .search_bar button{
        background-color: transparent;
        border: 0px;
        padding: 3px;
        font-size: .8em;
      }

    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  <nav>
   <div class="Hello">
    <h1>Welcome  <%= username %>!</h1>
    <ul class="Hlo">
      <li>Home</li>
      <li>About</li>
      <li>Services</li>
      <li>Contact</li>
    </ul>
  </div>
</nav>
<div class="dash">
  <div class="dashboard">
    <h1>Welcome, <%= username %>!</h1>
   <div>
    <p>You have successfully logged in.</p>
    <p>search bellow for movies</p>
   </div>
    <div class="search_bar">
        
        <input type="text" placeholder="Search" id="moviename">
        <button id="search" type="submit"  ><i class="fa fa-search"></i></button>
    </div>
  </div>
</div>

</body>
<script>
  function handleImageClick(event) {
      event.preventDefault();
      const movieName = document.getElementById('moviename').value;
      if (!movieName) {
          console.log('Movie name is required');
          return;
      }
      fetch('/search', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json',
          },
          body: JSON.stringify({ moviename: movieName }),
      })
      .then(response => {
          if (!response.ok) {
              throw new Error('Failed to search');
          }
          return response.json();
      })
      .then(data => {
          if (data.moviename) {
              window.location.href = `/search?moviename=${encodeURIComponent(data.moviename)}`;
          } else {
              throw new Error('Invalid response');
          }
      })
      .catch(error => {
          console.error('Error:', error);
          alert("Error occurred while searching");
      });
  }

  document.getElementById('search').addEventListener('click', handleImageClick);
</script>
</html>